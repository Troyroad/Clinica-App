{
  "name": "clinica-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "concurrently -k \"npm run backend\" \"npm run frontend\" \"npm run electron\"",
    "frontend": "vite",
    "backend": "cd backend && npm run dev",
    "electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build",
    "preview": "vite preview",
    "make": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "concurrently": "^8.2.2",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "vite": "^5.1.4"
  },
  "build": {
    "appId": "com.clinica.app",
    "productName": "Cl√≠nica App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!backend/node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}